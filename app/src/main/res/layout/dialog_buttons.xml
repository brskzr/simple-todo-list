<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="top|center">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="4dp"
        android:layout_gravity="top|center">

        <LinearLayout
            android:orientation="horizontal" android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:padding="12dp">

            <ImageView
                android:clickable="true"
                android:id="@+id/iv_complete"
                android:layout_marginTop="4dp"
                android:layout_gravity="bottom"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_check_it"></ImageView>

            <View
                android:id="@+id/divider_one"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_width="1dp"
                android:background="@android:color/darker_gray"
                android:layout_height="match_parent"></View>

            <ImageView
                android:clickable="true"
                android:id="@+id/iv_edit"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="bottom"
                android:src="@drawable/ic_edit"></ImageView>

            <View
                android:id="@+id/divider_two"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_width="1dp"
                android:background="@android:color/darker_gray"
                android:layout_height="match_parent"></View>

            <ImageView
                android:clickable="true"
                android:id="@+id/iv_remove"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="bottom"
                android:src="@drawable/ic_rubbish"></ImageView>

            <View
                android:id="@+id/divider_three"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_width="1dp"
                android:background="@android:color/darker_gray"
                android:layout_height="match_parent"></View>

            <ImageView
                android:clickable="true"
                android:id="@+id/iv_share"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_shareit"></ImageView>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>


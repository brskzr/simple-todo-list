<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorLayout">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="You need to complete today"
        android:textSize="16sp"
        android:textStyle="bold"
        android:gravity="center"
        android:padding="12dp"
        ></TextView>


    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:boxBackgroundColor="#FFFFFFFF"
        app:hintAnimationEnabled="true"
        android:hint="Tag of task"
        android:layout_margin="12dp"
        android:padding="0dp">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_tagname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_bookmark"
            android:inputType="text"
            android:textSize="16sp"
            android:maxLength="50">
        </com.google.android.material.textfield.TextInputEditText>
    </com.google.android.material.textfield.TextInputLayout>

    <LinearLayout
        android:id="@+id/ll_remind_at"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="6dp"
        android:background="@android:color/white"
        android:layout_marginRight="12dp"
        android:layout_marginLeft="12dp">

        <ImageView
            android:clickable="false"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_clock">
        </ImageView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Remind At"
            android:textSize="16sp"
            android:layout_gravity="center"></TextView>
        <TextView
            android:id="@+id/tv_reminde_at"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="24sp"
            android:gravity="right"
            android:layout_gravity="center"
            android:text="16:16"
            ></TextView>

    </LinearLayout>

</LinearLayout>